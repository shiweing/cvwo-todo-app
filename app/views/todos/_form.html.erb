<%= form_for @todo do |f| %>
    Todo: <%= f.text_field :item, placeholder: "New Todo" %>
    Category: <%= f.select(:category_id, 
        options_for_select(Category.all.map{|c|[c.name, c.id]}, 
        selected: @category.blank? ? 1 : @category.id)) %>
    <%= f.submit "Create Todo" %>
<% end %>