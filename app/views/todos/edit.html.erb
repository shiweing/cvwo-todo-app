<div class="container">
    <div class="row">
        <div class="todo-wrapper col-9">

          <h1>Edit Todo</h1>

          <%= form_for(@todo, html: {class: "todo-form card text-white", autocomplete: "off"}) do |f| %>
            <div class="card-header">
                <div class="form-group"><%= f.text_field :item, placeholder: "New Todo", class: 'form-control' %></div>
            </div>
            <div class="card-body">
                <div class="form-group"><%= f.text_area :description, placeholder: "Item Description", class: 'form-control', rows: '6' %></div>
                <div class="form-group input-group category-select">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="category-select">Category</label>
                    </div>
                    <%= f.select :category_id, options_for_select(Category.all.map{|c|[c.name, c.id]}, selected: @todo.category_id), {}, {:id => 'category-select', :class => 'form-control'} %>
                </div>
            </div>
            <div class="card-footer">
              <%= f.submit "EDIT", class: 'submit-btn btn btn-light btn-block' %>
            </div>
          <% end %>

        </div>

        <div class="cat-wrapper col-3">
            <%= render "categories/category" %>
        </div>
    </div>
</div>


