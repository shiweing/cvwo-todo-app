<html>
  <head>
    <title>New Todo</title>
  </head>
  <body>
    <h1>Edit Todo</h1>
    <%= form_for(@todo) do |f| %>
      Todo: <%= f.text_field :item %> <br/>
      Category: <%= f.select(:category_id, options_for_select(Category.all.map{|c|[c.name, c.id]}, selected: @todo.category_id)) %>
      <%= f.submit %>
    <% end %>
  </body>
</html>

